<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <animation-list>
            <item android:duration="1000">
                <shape android:shape="rectangle">
                    <gradient android:angle="45" android:endColor="@color/bgStartColor" android:startColor="@color/bgEndColor" />

                </shape>
            </item>
            <item android:duration="1000">
                <shape android:shape="rectangle">
                    <gradient android:angle="0" android:endColor="@color/bgStartColor" android:startColor="@color/bgEndColor" />
                </shape>
            </item>
            <item android:duration="1000">
                <shape android:shape="rectangle">
                    <gradient android:angle="0" android:endColor="@color/bgStartColor" android:startColor="@color/bgEndColor" />
                </shape>
            </item>
        </animation-list>
    </item>
</selector>